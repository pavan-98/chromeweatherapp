{
  "manifest_version": 3,
  "name": "Weather App",
  "version": "1.0",
  "description": "Get Weather by Location",
  "icons": {
    "128": "img/icons128.png",
    "48": "img/icons48.png",
    "16": "img/icons16.png"
  },
  "action": {
    "default_icon": "img/icons16.png",
    "default_popup": "popup.html",
    "default_width": "400",
    "default_height": "600"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
